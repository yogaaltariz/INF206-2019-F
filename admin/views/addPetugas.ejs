            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Email campaign chart -->
                <!-- ============================================================== -->
                <% 
                if(messages.info){
                  %>
                  <div class="alert alert-success" role="alert">
                    <%= messages.info %>
                  </div>
                <%
                }
              %>
                <form action="/addPetugas" method="POST">
                    <div class="form-row">
                        <div class="col border shadow-sm px-3 py-2">
                            <input type="text" class="form-control my-4" name="NIP" placeholder="Nomor Induk Pegawai">
                            <input type="text" class="form-control my-4" name="nama" placeholder="Nama lengkap petugas">

                            <select class="form-control" id="inlineFormCustomSelect" name="jk">
                                    <option value='0'>Jenis Kelamin</option>
                                    <option value="lk">Laki - laki</option>
                                    <option value="pr">Perempuan</option>
                            </select>

                            <input type="text" class="form-control my-4" name="alamat" placeholder="Alamat petugas">
                            
                        </div>

                        <div class="col border shadow-sm p-2">
                            <input type="email" class="form-control my-4" name="email" placeholder="Email petugas">
                            <input type="text" class="form-control my-4" name="username" placeholder="Username akun petugas">

                        </div>
                    </div>

                    <input type="submit" class="btn btn-block btn-dark my-1" value="Tambah petugas">
                </form>

