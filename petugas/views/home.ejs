      <div class="card text-center mb-4">
        <div class="card-body">
          <h5 class="card-title">Ganti password</h5>
          <form action="/<%= id %>" method="POST">
            <input type="password" placeholder="password lama anda" name="password" class="form-control" required>
            <input type="password" placeholder="password baru anda" name="password1" class="form-control" required>
            <input type="password" placeholder="ulangi password baru anda" name="password2" class="form-control" required>
